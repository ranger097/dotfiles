"custom/qmmp": {
    "format": "{}",
    "max-length": 40,
    "interval": 2,
    "exec": "playerctl --player=qmmp metadata --format '{{artist}} - {{title}}'",
    "on-click": "playerctl --player=qmmp play-pause",
    "on-scroll-up": "playerctl --player=qmmp next",
    "on-scroll-down": "playerctl --player=qmmp previous"
},
"custom/vpn_ip": {
