* {
    font-family: 'Noto Sans Mono', 'Font Awesome 6 Free', 'Font Awesome 6 Brands', monospace;
    font-size: 13px;
    font-weight: 600;
}


window#waybar {
    background-color: rgba(43, 48, 59, 0.0);
}


#custom-logos {
    color: #eebd35;
    border-radius: 4px;
   color: #ebdbb2;
   background-color: #000000;
   margin-top: 13px;
   margin-bottom: 13px;
   padding: 0px 1px 0px 1px;
}


#workspaces {
    background-color: transparent;
    color: #000000;
    border-radius: 4px;
    border: 0px solid black;
    margin-left: 0px;
    margin-right: 0px;
margin-top: 13px;
margin-bottom: 13px;
padding: 3px 1px 3px 1px;
}


#workspaces button {
background-color: #1d2021;
    color: #ebdbb2;
margin-left: 4px;
margin-right: 4px;
border-radius: 4px;
border: 1px solid #000000;
margin-top:0px;
padding: 3px 1px 3px 1px;
}



#workspaces button:nth-child(even) {
background-color: #505050;
    color: #ebdbb2;
margin-left: 4px;
margin-right: 4px;
border-radius: 4px;
border: 1px solid #000000;

}


#workspaces button.focused {
        background-color: #ebdbb2;
        color: #000000;
        border: 1px solid #000000;

}


#workspaces button.focused:hover {
background-color: #ebdbb2;
        color: #000000;

}

#workspaces button:hover {
        background-color: #505050;
}


#custom-cava {
background-color: #000000;
color: #ebdbb2;
border-radius: 4px;
border: 1px solid rgba(235,219,178,0.7);
margin-top: 13px;
margin-bottom: 13px;
padding: 3px 1px 3px 1px;
}


#mpris {
  color: #ebdbb2;
background-color: #000000;
border-radius: 4px;
border: 1px solid #000000;
margin-top: 13px;
margin-bottom: 13px;
padding: 3px 1px 3px 1px;
}



#memory {
background-color: #505050;
    color: #ebdbb2;
    border-radius: 4px;
border: 1px solid #000000;
margin-top: 13px;
margin-bottom: 13px;
padding: 3px 1px 3px 1px;
}



#window {
    margin: 0 8px;
}

/* If workspaces is the leftmost module, omit left margin */
.modules-left > widget:first-child > #workspaces {
    margin-left:0px;
}

/* If workspaces is the rightmost module, omit right margin */
.modules-right > widget:last-child > #workspaces {
    margin-right: 0px;
}






#clock {
   
    color: #ebdbb2;
background-color: #000000;
border: 1px solid rgba(235,219,178,0.7);
margin-top: 13px;
margin-bottom: 13px;
padding: 3px 1px 3px 1px;
}

#battery {
    background-color: #ebdbb2;
    color: #000000;
margin-top: 13px;
margin-bottom: 13px;
padding: 3px 1px 3px 1px;
}





#cpu {
    
    background-color: #1d2021;
    color: #ebdbb2;
 border-radius: 4px;

   border: 1px solid #000000;    
margin-top: 13px;
margin-bottom: 13px;
padding: 3px 1px 3px 1px;
}




#pulseaudio {
    background: #000000;
    color: #ebdbb2;
margin-top: 13px;
margin-bottom: 13px;
padding: 3px 1px 3px 1px;
}

#pulseaudio.muted {
    background-color: #000000;
    color: #2a5c45;
}






#custom-spacer {
min-width: 11px;
margin-top: 13px;
margin-bottom: 13px;
padding: 3px 1px 3px 1px;
}


#custom-logos,
#workspaces,
#custom-cava,
#mpris,
#pulseaudio,
#cpu,
#memory,
#battery,
#clock {
padding-top: 1px;
padding-bottom: 1px;
padding-left: 4px;
padding-right: 4px;
margin-top:8px;
margin-bottom:8px;
}
