@import "~/.cache/wal/colors-rofi-dark.rasi"


configuration {
    display-drun: "";
	prompt: "";
	font: "Maple Mono";
}



window { location: center; anchor: center; transparency: 
    "real"; padding: 0px; border: 3px; border-radius: 
    25px; color: @selected-active-background; 
    background-color: rgba(0,0,0,0.11); spacing: 0;
   //children:  [listview];
	children: [inputbar, listview];
    orientation: horizontal;
	//orientation: vertical;
   background-image: url("/home/ranger/Downloads/wallpaper-theme-converter4.png"); 
   height : 350px;
   width: 600px;
   border-color: black;
   }

inputbar {
    color: @selected-active-background;
    background-color: @selected-active-background;
    border: 0px 3px 0px 0px;
    border-radius:  10px 0px 0px 10px;
    border-color: black;
    font: "Maple Mono";
 background-image: url("/home/ranger/wallpaper-script/Wallpapers/Solo_leveling_1.png",width);
 padding:0px;
margin: 0px 10px 0px 0px;
}
prompt {
    margin:     0px 0em 0em 0em ;
	padding:0px;
	text-color: @selected-active-background;
	background-color: @background;
	
}

textbox-prompt-colon {
        content: "";
		str: "";
    }
textbox {
    content: "";
		str: "";
        placeholder: "";
	background-color: rgba(0,0,0,0);

}

entry {
	placeholder: "";
	background-color: rgba(0,0,0,0);
	text-size: 20px;
	
}
listview {
    padding: 5px;
    border-radius: 0px 0px 0px 0px;
    border-color: black;
    border: 0px;
    background-color: rgba(0,0,0,0);
    dynamic: false;
    lines:6;
	scrollbar: false;
    width: 100px;
	margin:17px 2px 0px -10px;
}
element {
    padding: 10px 10px 10px 20px;
    //vertical-align: 100.5;
   border: 0px;
    border-radius: 10px;
    background-color: #000000;
    text-color: @selected-urgent-background;
    font:inherit;
    margin: 5px;
    border-color: black;
    
}
element-text {
    background-color: rgba(0,0,0,1);
    text-color:  @urgent-background;
    
}

element selected.normal {
    background-color: @urgent-background;
	border-radius: 10px;
	text-color: @background;
    border-color: black;
}

element-text selected {
    text-color: @background;
}

element normal active {
    foreground: @lightblue;
}
element normal urgent {
    foreground: @lightred;
}
element alternate normal {
}
element alternate active {
    foreground: @lightblue;
}
element alternate urgent {
    foreground: @lightred;
}
element selected active {
    background-color: @lightblue;
    foreground: @dark;
}
element selected urgent {
    background-color: @lightred;
    foreground: @dark;
}
element normal normal {

}
vertb {
    expand: false;
    children: [ dummy0, mode-switcher, dummy1  ];
}
dummy0,  dummy1 {
    expand: true;
}
mode-switcher {
    expand: false;
    orientation: vertical;
    spacing: 0px;
    border: 0px 0px 0px 0px;
}
button {
    font: "FontAwesome 22";
    padding: 6px;
    border: 2px 0px 2px 2px;
    border-radius: 4px 0px 0px 4px;
    background-color: @selected-active-background;
    border-color: @foreground;
    color: @foreground;
    horizontal-align: 0.5;
}
button selected normal {
    color: @selected-active-background;
    border: 2px 0px 2px 2px;
    background-color: @selected-active-background;
    border-color: @foreground;
}
error-message {
    expand: true;
    background-color: red;
    border-color: @selected-active-background;
    border: 2px;
    padding: 1em;
}
