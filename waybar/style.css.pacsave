* {
    font-family:'Maple Mono CN NF', 'Noto Sans Mono', 'Font Awesome 6 Free', 'Font Awesome 6 Brands', monospace;
    font-size: 11px;
    font-weight: 900;
}

*:hover{
background-color: #505050;
}

window#waybar {
    background-color: rgba(43, 48, 59, 1.0);
    border-bottom: 0px solid rgba(100, 114, 125, 0.0);
    color: #ffffff;
    transition-property: background-color;
    transition-duration: .5s;
    padding-right: 6px;
    padding-left: 6px;

}

window#waybar.hidden {
    opacity: 0.2;
}

/*
window#waybar.empty {
